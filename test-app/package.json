{
  "name": "formio-test-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Local testing app for Form.io file upload development",
  "scripts": {
    "dev": "vite --port 64849",
    "build": "tsc && vite build",
    "preview": "vite preview --port 64849",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "test:performance": "vitest tests/performance",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:formio": "playwright test tests/e2e/formio-module",
    "test:e2e:tus": "playwright test --grep @tus",
    "test:e2e:uppy": "playwright test --grep @uppy",
    "test:e2e:edge": "playwright test --grep @edge",
    "test:e2e:visual": "playwright test --grep @visual",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "playwright:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@formio/react": "file:../formio-react",
    "@formio/js": "^5.2.2",
    "@formio/file-upload": "file:../packages/formio-file-upload",
    "@uppy/core": "^5.0.2",
    "@uppy/dashboard": "^5.0.2",
    "@uppy/react": "^5.1.0",
    "@uppy/tus": "^5.0.1",
    "@uppy/xhr-upload": "^5.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tus-js-client": "^4.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.4",
    "prettier": "^3.1.1"
  }
}