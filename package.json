{
  "name": "formio-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Form.io monorepo with file upload, React SDK, and cloud deployment",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "cd infrastructure/local && docker-compose up -d",
    "docker:down": "cd infrastructure/local && docker-compose down",
    "docker:reset": "cd infrastructure/local && docker-compose down -v",
    "validate": "./scripts/validate-credentials.sh"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.13.0"
  },
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.64.6",
    "@opentelemetry/sdk-node": "^0.205.0",
    "bullmq": "^5.60.0",
    "ioredis": "^5.8.0",
    "react-router-dom": "^7.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
