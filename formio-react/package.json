{
	"name": "@qrius/formio-react",
	"version": "6.1.0",
	"description": "React renderer for form.io forms.",
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		}
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com",
		"@qrius:registry": "https://npm.pkg.github.com"
	},
	"scripts": {
		"test": "jest",
		"clean": "rm -rf lib",
		"build": "npm run clean && tsc --project tsconfig.json --module ESNext --outDir lib --moduleResolution Bundler && npm run copy-files",
		"copy-files": "copyfiles -u 1 \"src/**/*.css\" lib/",
		"lint": "eslint src",
		"format": "prettier . --write"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/QriusGlobal/formio-react.git"
	},
	"keywords": [
		"React",
		"component",
		"Formio",
		"Forms",
		"react-component"
	],
	"author": "Randall Knutson <randall@form.io>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/formio/react/issues"
	},
	"homepage": "https://github.com/formio/react#readme",
	"dependencies": {
		"@ungap/structured-clone": "^1.2.0",
