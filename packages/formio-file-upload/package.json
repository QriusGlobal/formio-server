{
  "name": "@formio/file-upload",
  "version": "0.0.1",
  "description": "File upload module for Form.io with TUS resumable uploads and Uppy.js integration",
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.esm.js",
      "types": "./lib/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "build:dev": "NODE_ENV=development rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --config=jest.config.parallel.js",
    "test:baseline": "jest --config=jest.config.js",
    "test:parallel": "jest --config=jest.config.parallel.js",
    "test:watch": "jest --watch --config=jest.config.parallel.js",
    "test:benchmark": "node scripts/benchmark-tests.js",
    "test:coverage": "jest --coverage --config=jest.config.parallel.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "benchmark": "bun scripts/benchmark.js",
    "prepublishOnly": "bun run build:prod"
  },
  "keywords": [
    "formio",
    "forms",
    "file-upload",
    "tus",
    "uppy",
    "resumable-upload"
  ],
  "author": "Form.io Community",
  "license": "MIT",
  "peerDependencies": {
    "@formio/js": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@uppy/audio": "^3.0.1",
    "@uppy/core": "^5.0.2",
    "@uppy/dashboard": "^5.0.2",
    "@uppy/golden-retriever": "^5.1.0",
    "@uppy/image-editor": "^4.0.1",
    "@uppy/react": "^5.1.0",
    "@uppy/screen-capture": "^5.0.1",
    "@uppy/tus": "^5.0.1",
    "@uppy/url": "^5.0.1",
    "@uppy/webcam": "^5.0.1",
    "tus-js-client": "^4.3.1",
    "xxhash-wasm": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "rollup": "^4.9.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.4.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/formio/file-upload.git"
  }
}
