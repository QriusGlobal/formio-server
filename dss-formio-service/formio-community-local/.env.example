# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=formio

# Form.io Admin Credentials
ROOT_EMAIL=admin@example.com
ROOT_PASSWORD=changeme123

# Security Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-jwt-secret-change-me-now-make-it-long-and-random
DB_SECRET=your-db-secret-change-me-now-also-long-and-random

# Debug Configuration
DEBUG=formio:*
NODE_ENV=development

# Form.io Domain (for webhooks and external links)
FORMIO_DOMAIN=http://localhost:3001

# Trust Proxy (for load balancer integration)
FORMIO_TRUST_PROXY=true

# File Storage Configuration (GCS S3-Compatible)
FORMIO_FILES_SERVER=s3
FORMIO_S3_SERVER=https://storage.googleapis.com
FORMIO_S3_BUCKET=placeholder-bucket
FORMIO_S3_REGION=auto
FORMIO_S3_KEY=your-gcs-access-key-here
FORMIO_S3_SECRET=your-gcs-secret-key-here

# Email Configuration (Optional - for user notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Additional Configuration Options
# FORMIO_LICENSE_KEY=your-license-key-if-upgrading-to-enterprise
# FORMIO_PROJECT_TEMPLATE=your-project-template-id