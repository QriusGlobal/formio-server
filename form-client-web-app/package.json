{
  "name": "form-client-web-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Simple web client for viewing and interacting with Form.io forms (no backend required)",
  "scripts": {
    "dev": "vite --port 64849",
    "build": "tsc && vite build",
    "preview": "vite preview --port 64849",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "bun:dev": "bun run dev",
    "bun:build": "bun run build",
    "bun:test": "bun test"
  },
  "dependencies": {
    "@formio/js": "^5.2.2",
    "@formio/react": "file:../formio-react",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.4",
    "prettier": "^3.1.1"
  }
}
